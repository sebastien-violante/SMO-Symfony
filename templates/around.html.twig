{% extends 'base.html.twig' %}

{% block title %}Around{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('addMap') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('addMap') }}
{% endblock %}

{% block main %}
    <main id="around">
        <header>
            <h1 id="around-title">{{'around.title'|trans}}</h1>
            <ul id="filters">
                <li class="filter">
                    <button class="filter-btn">
                        <img data-establishment-type="site" id="sites" class="filter-icon chosen" src="{{ asset('build/pictures/camera.svg') }}" />
                    </button>
                    <h3>{{'around.sites'|trans}}</h3>
                </li>
                <li class="filter">
                    <button class="filter-btn">
                        <img data-establishment-type="activity" id="activities" class="filter-icon" src="{{ asset('build/pictures/activities.svg') }}" />
                    </button>
                    <h3>{{'around.activities'|trans}}</h3>
                </li>
                <li class="filter">
                    <button class="filter-btn">
                        <img data-establishment-type="restaurant" id="restaurants" class="filter-icon" src="{{ asset('build/pictures/restaurants.svg') }}" />
                    </button>
                    <h3>{{'around.restaurants'|trans}}</h3>
                </li>
            </ul>
        </header>

        <div id="map" data-longitude="0.68484" data-latitude="47.394144"></div>
        <svg id="overlay" width="24" height="24" stroke-width="1.5" viewBox="0 0 24 24" fill="var(--blue)" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 10C20 14.4183 12 22 12 22C12 22 4 14.4183 4 10C4 5.58172 7.58172 2 12 2C16.4183 2 20 5.58172 20 10Z" stroke="currentColor" stroke-width="1.5"/>
